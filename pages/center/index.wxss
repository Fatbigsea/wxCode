/* pages/center/index.wxss */
form{
  display: block;
  padding: 10px;
}
.item{
  display: flex;
  height: 48px;
  line-height: 48px;
  border-bottom: 1px solid #f99;

}

.item label{
  width: 80px;
  text-align: right;
  color: #f99;
}

.item input{
  flex: 1;
  height: 48px;
}
.item .txt{
  font-size: 14px;
  color: #C9C9C9;
  text-align: right;
}
.item .btn{
  font-size: 12px;
  color: #fff;
  background:#f99;
  height: 36px;
  width: 96px;
  line-height: 36px;
  margin-top:5px;
  margin-left: 20px; 
  border-radius: 35px;
}
.login{
  margin-top: 20px;
  color: #fff;
  background: #f99;
  width: 80%;
}
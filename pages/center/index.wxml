<!--pages/center/index.wxml-->
<form >
  <view class="item">
    <label>姓名：</label>
    <input type="text" placeholder="请填写您的真实姓名" placeholder-class="txt"/>
  </view>
  <view class="item">
    <label>手机：</label>
    <input type="text" placeholder="请填写您的手机号" placeholder-class="txt"/>
  </view>
  <view class="item">
    <label>身份：</label>
    <input type="text" placeholder="请选择您与宝宝的关系身份" placeholder-class="txt"/>
  </view>
  <view class="item">
    <label>验证码：</label>
    <input type="text" placeholder="六位数字验证码" placeholder-class="txt"/>
    <button class="btn">发送验证码</button>
  </view>
  <button class="login">绑定并登陆</button>
</form>
  